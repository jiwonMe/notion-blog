{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "lib": [
      "ES2019"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "this/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules/*",
    "./dist"
  ]
}